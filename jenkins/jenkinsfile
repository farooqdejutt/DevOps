pipeline {
    agent any

    stages {

                stage('build') {
            steps {
                echo 'here we will build the docker image'
                script {

                    dir('docker') { 
                    sh 'pwd'
                    sh 'ls -l'
                    sh 'docker images'
                    sh 'docker build -t myjenkin-app:v1'
                    sh 'docker images' 
                    }
                }
            }
        }
                stage('push') {
            steps {
                echo 'here we will push the build to dockerhub'
            }
        }
                        stage('QA') {
            steps {
                echo 'here will QA the docker image'
            }
        }
    }
}
