pipeline {
    agent { label 'slave'}

    stages {

                stage('build') {
            steps {
                echo 'here we will build the docker image'
                script {

                    dir('docker') { 
                    sh 'pwd'
                    sh 'ls -l'
                    sh 'docker images'
                    sh 'docker build -t myjenkin-app:v1 .'
                    sh 'docker images' 
                    }
                }
            }
        }
            stage('Login and Push to Docker Hub') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: "docker-hub", usernameVariable: 'DOCKER_HUB_USERNAME', passwordVariable: 'DOCKER_HUB_PASSWORD')]) {
                        sh 'docker login -u $DOCKER_HUB_USERNAME -p $DOCKER_HUB_PASSWORD'
                        sh 'docker tag farooqdevops/my-node-app:v2 myjenkin-app:v1'
                        sh 'docker push farooqdevops/my-node-app:v2'
                    }
                }
            }
        }

    }
}
